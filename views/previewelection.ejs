<html>
<head>
<title>PREVIEW YOUR ELECTION</title>
<meta name="csrf-token" content="<%= csrf %>" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script src="https://cdn.tailwindcss.com"></script><style>
        h1{text-align: center;}
        p{text-align: center;}
        span{text-align: center;}
        a{text-align: center;}
        div{text-align: center;}
        ol{text-align: center;}
    </style>
  </head>
  <body style="background-color: #FFEBCD;">
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <span class="text-2xl font-dark ">ELECTION PREVIEW</span>
            <input type="hidden" name="_csrf" value="<%= csrf %>">
        <div class="py-3">
          <div>
            <% for (let i=0; i<questions.length; i++) { %>
                <div>
                    <p class="font-bold text">QUESTION<%= i+1 %> : <%= questions[i].questionname %></p>
                    <p class="font-semibold text-gray-600">YOUR DESCRIPTION <%= questions[i].description %></p>
                    <div class="pt-3 pl-5">
                        <% for (let j=0; j<options[i].length; j++) { %>
                          <div class="flex gap-2">
                          <input
                                class="border-2 flex items-center border-black p-2"
                                id="<%= questions[i].id %>-<%= options[i][j].id %>"
                                type="radio"
                                value="<%= options[i][j].id %>"
                                name="<%= questions[i].id %>"
                            />
   <label for="<%= questions[i].id %>-<%= options[i][j].id %>"><%= options[i][j].optionname %></label>
   </div>
   <% } %>
   </div>
   </div>
   <% } %>
   </div>
   </div>    
  <% if(messages && messages.error && messages.error.length > 0)  { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
              <p class="bg-red-400 my-3 list-none rounded px-4 py-2"><%= messages.error[i] %></p>
            <% } %>
          <% } %>
        </div>
    </div>
    <b>
    <a href="/elections"><span class="text-white bg-red-600 hover:bg-red-800 font-medium rounded px-3 py-1">PREVIOUS PAGE</a></span>
  </b>
  </body>
</html>
